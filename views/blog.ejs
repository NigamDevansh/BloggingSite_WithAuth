<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./Partials/header") %>
        <%- include("./Partials/script") %>
            <title>Blog</title>
</head>

<body>
        <%- include("./Partials/navbar") %>
        <div class="container mt-2">
            <h1><%= blog.title %></h1>
            <img class="mt-3" src="<%= blog.coverImgUrl %>" width="300px">
            <div class="container mt-5">
            <pre style="white-space:pre-wrap">
                <%= blog.body %>
            </pre>
            </div>

        </div>
        <div class="container mt-2">
            <img class="me-2" src="<%= blog.createdBy.profileImageUrl %>" width="50px">
            <%= blog.createdBy.fullName %>
        </div>
        <div class="container mt-3">
            <h2>Comments (<%= comments.length %>)</h2>
            <% if (locals.user) { %>
                <form action="/blog/comments/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input name="content" type="text" class="form-control" placeholder="Enter Your Comments here"
                            aria-describedby="emailHelp">
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary">Add</button>
                </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment=> { %>
                    <div class="mt-4">
                        <img class="me-3" src="<%= comment.createdBy.profileImageUrl %>" width="50px">
                        <%= comment.createdBy.fullName %>
                            <pre class="mt-3"><%= comment.content %></pre>
                    </div>
                <% }) %>
            </div>

        </div>


</body>
</html>